{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

  
<div class="container">
  <h1>Registrieren</h1>
    {{ form_start(registrationForm) }}
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">E-Mail</label>
        <div class="col-sm-10">
        {{ form_errors(registrationForm.username) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
             
        {# <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com"> #}
        </div>
  </div>
   <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Nachname</label>
        <div class="col-sm-10">
            {{ form_errors(registrationForm.lastname) }}
            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
            
        {# <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com"> #}
        </div>
  </div>
  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Passwort</label>
    <div class="col-sm-10">
        {{ form_errors(registrationForm.plainPassword, {
                label: 'Passwort'
            }) }}
        {{ form_widget(registrationForm.plainPassword, {
                label: 'Passwort', 
                'attr': {'class': 'form-control'}
            }) }}
            
    </div>
  </div>
     <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Bedingungen zustimmen</label>
    <div class="col-sm-10">
        {{ form_errors(registrationForm.agreeTerms) }}
        {{ form_widget(registrationForm.agreeTerms) }}
   
    </div>
  </div>    
        
       
       

        <button type="submit" class="btn btn-primary">Registrieren</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
{% block footer %}
    <footer class="bg-dark text-center text-white fixed-bottom" >{% include "layout/footer.html.twig" %} </footer>
{% endblock %} 
