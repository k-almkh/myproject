{% extends 'base.html.twig' %}

{% block title %}Anmelden!{% endblock %}

{% block body %}
<div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Sie haben mit  {{ app.user.username }} angemeldet, <a href="{{ path('app_logout') }}">Abmelden</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Bitte Anmelden</h1>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">Passwort</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary mt-2" type="submit">
       Anmelden
    </button>
</form>
   <a class="btn btn-lg btn-danger  mt-2  mb-2" href="{{ path('app_register') }}"> Registrieren</a>
</div>
{% endblock %}
{% block footer %}
    <footer class="bg-dark text-center text-white fixed-bottom" >{% include "layout/footer.html.twig" %} </footer>
{% endblock %} 
